doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sign Up
  link(rel='stylesheet' href='/css/signup.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css' integrity='sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==' crossorigin='anonymous' referrerpolicy='no-referrer')
.signup-container
  .logo-container
    img(src='/images/hand.jpg' alt='Your Logo')
  h2 Sign Up
  form#signup-form(action="/Signup" method='POST')
    .form-group
      label(for='first-name') First Name
      .input-with-icon
        input#first-name(type='text' name='firstname')
        i.fas.fa-user
      span#first-name-error.error-message
    .form-group
      label(for='last-name') Last Name
      .input-with-icon
        input#last-name(type='text' name='lastname')
        i.fas.fa-user
      span#last-name-error.error-message
    .form-group
      label(for='email') Email
      .input-with-icon
        input#email(type='email' name='email')
        i.fas.fa-envelope
      span#email-error.error-message
    .form-group
      label(for='password') Password
      .input-with-icon
        input#password(type='password' name='password')
        i.fas.fa-lock
      span#password-error.error-message
    .form-group
      label(for='confirm-password') Confirm Password
      .input-with-icon
        input#confirm-password(type='password' name='confirm-password')
        i.fas.fa-lock
      span#confirm-password-error.error-message
    .form-group
      label(for='role') Role
      .select-with-icon
        select#role(name='role')
          option(value='' disabled selected) Select Role
          option(value='manager') Manager
          option(value='director') Director
          option(value='salesagent') SalesAgent
        i.fas.fa-briefcase
      span#role-error.error-message
    .form-group
      label(for='branch') Branch Name
      .select-with-icon
        select#branch(name='branch')
          option(value='' disabled selected) Select Branch
          option(value='maganjo') Maganjo
          option(value='matuga') Matuga
          option(value='other') Other
        i.fas.fa-map-marker-alt
      span#branch-error.error-message
    button(type='submit') Sign Up
script(src='/js/signup.js')